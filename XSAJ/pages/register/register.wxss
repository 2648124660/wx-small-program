.input {
    width: 100%;
    height: 90rpx;
    border-bottom: 1rpx solid #e5e5e5;
    display: flex;
    flex-direction: row;
    align-items: center;
    line-height: 90rpx;
    background: #fff;
}

.input-label {
    margin: 30rpx;
}

.placeholder {
    font-size: 32rpx;
    color: #b2b2b2;
}

.input-text {
    font-size: 32rpx;
    border-left: 1rpx solid #e5e5e5;
    height: 90rpx;
    padding-left: 25rpx;
    flex: 1;
}

.get-verification-code-btn {
    color: #09bb07;
    margin-right: 30rpx;
}
