.header {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    justify-content: center;
    background: #09bb07;
    height: 380rpx;
}

.my-avatar {
    height: 130rpx;
    width: 130rpx;
    border-radius: 10rpx;
}

.name {
    color: white;
}

.bind-phone {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.bind-phone-button {
    height: 88rpx;
    width: 690rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 88rpx;
    color: white;
    background: #09bb07;
    margin-top: 30rpx;
}

.bind-text {
    color: #9b9b9b;
    margin-top: 30rpx;
}

.customer-num {
    margin-right: 30rpx;
    color: #999;
}

.explain {
    width: 100%;
    text-align: center;
    position: fixed;
    bottom: 30rpx;
    color: #b2b2b2;
}
