.input {
    width: 90%;
    height: 90rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    line-height: 90rpx;
    border-bottom: 1rpx solid #fff;
}

.input-label {
    height: 40rpx;
    width: 40rpx;
}

.placeholder {
    font-size: 34rpx;
    color: #fff;
}

.input-text {
    font-size: 32rpx;
    height: 90rpx;
    padding-left: 25rpx;
    flex: 1;
    color: #fff;
}

.get-verification-code-btn {
    color: #fff;
    margin-right: 30rpx;
}

.bg-img {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: -1;
}

.common-btn {
  opacity:0.6;
  filter:alpha(opacity=60);
  background: #fff;
  color: #1675e1;
  margin-top: 120rpx;
}

.common-btn:active {
  opacity:0.3;
  filter:alpha(opacity=30);
  background: #fff;
  color: #1675e1;
  margin-top: 120rpx;
}