.container {
  overflow-x: hidden;
}

.case-item {
  width: 100%;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.answear-lawyer-names {
  width: 100%;
  display: flex;
  flex: row;
  font-size: 25rpx;
  margin-left: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid gainsboro;
}

.header-bg {
  height: 340rpx;
  width: 100%;
  z-index: -1;
  position: absolute;
  top: 0;
  left: 0;
}

.lawyer-head {
  display: flex;
  flex-direction: row;
}

.lawyer-info-header {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.avatar {
  margin: 50rpx 20rpx 50rpx 30rpx;
  height: 140rpx;
  width: 140rpx;
  border-radius: 10rpx;
}

.hot-score {
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 28rpx;
  margin-right: 30rpx;
  align-items: center;
  justify-content: space-between;
}

.normal {
  color: #353535;
}

.gray {
  color: #999;
}

.margin-top {
  margin-top: 20rpx;
}

.lawyer-name-address {
  color: #fff;
  line-height: 50rpx;
}

.answear-info {
  color: #fff;
  margin-top: 17rpx;
}

.lawyer-info {
  color: #fff;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.margin-bottom {
  margin-bottom: 20rpx;
}

.navigator {
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 100rpx;
  align-items: center;
  background: white;
  border-bottom: 1rpx solid #eee;
}

.active {
  color: #1675e1;
  margin: 60rpx;
  width: 200rpx;
  text-align: center;
  line-height: 97rpx;
  border-bottom: 2rpx solid #1675e1;
}

.normal {
  width: 200rpx;
  text-align: center;
  margin: 60rpx;
  color: #333;
}

.content {
  margin: 0rpx 30rpx 30rpx 30rpx;
  padding-top: 10rpx;
  font-size: 34rpx;
  color: #353535;
  line-height: 50rpx;
  max-height: 200rpx;
  overflow: hidden;
}

.lawyers-name {
  margin-left: 30rpx;
  margin-top: 35rpx;
  color: #a9a9a9;
  display: flex;
  align-items: center;
}

.solution-title {
  margin-left: 16rpx;
}

.bottom-button {
  background: #1675e1;
  border-radius: 10rpx;
  height: 90rpx;
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  font-size: 36rpx;
  width: 80rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.evaluate-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
  border-top: 1rpx solid #eee;
  height: 110rpx;
}

.column {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  flex: 1;
}

.avatar-margin {
  margin-bottom: 30rpx;
  flex: 1;
}

.commenter-name {
  color: #353535;
  line-height: 50rpx;
}

.comment-date {
  color: #bfbfbf;
  line-height: 36rpx;
}

.score {
  display: flex;
  flex-direction: row;
  margin-right: 30rpx;
}

.star-image {
  width: 28rpx;
  height: 28rpx;
  margin: 5rpx;
  src: "../../images/9@2X.png";
}

.item {
  margin: 5rpx;
}

.bottom-btn {
  width: 100%;
  overflow: hidden;
}
