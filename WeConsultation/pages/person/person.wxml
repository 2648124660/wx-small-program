<view >
    <view class="header-bg">
      <image src="../../images/52.png" class="bg-pic"></image>
      <view class="header">
          <image src="{{userInfo.avatarUrl}}" class="my-avatar" style="margin: 30rpx;"></image>
          <view class="user-info">
            <text class="big-text name">{{userNickName}}</text>
            <text class="normal-text name" style="margin-top: 20rpx">{{userPhoneNum}}</text>
          </view>
          <view class="bind-phone small-text" hidden="{{isHiddenBind}}" bindtap="gotoBindPhone" >绑定手机</view>
      </view>
    </view>

