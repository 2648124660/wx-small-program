
.case-item {
    width: 100%;
    background: #fff;
    border-bottom: 1rpx solid #eeeeee;
}

.content {
    margin: 0rpx 30rpx 30rpx 30rpx;
    font-size: 34rpx;
    color: #353535;
    line-height: 50rpx;
    max-height: 200rpx;
    overflow: hidden;
    padding-top: 40rpx;
}

.lawyers-name {
    margin-left: 30rpx;
    margin-right: 30rpx;
    margin-bottom: 35rpx;
    color: #a9a9a9;
    display: flex;
    flex-direction: row;
}

.bottom-button {
    background: #09bb07;
    border-radius: 10rpx;
    height: 70rpx;
    width: 360rpx;
    margin-top: 14rpx;
    text-align: center;
    line-height: 70rpx;
}


.bottom-btn{
    width: 750rpx;
    overflow: hidden;
}

.name{
  flex: 1;
}

.type {
  width: 110rpx;
  height: 28rpx;
  background: #1675e1;
  color: white;
  text-align: center;
  border-radius: 4rpx;
  font-size: 20rpx;
  line-height: 28rpx;
}