.banner {
  width: 100%;
  height: 480rpx;
}

.banner-image {
  width: 100%;
  height: 480rpx;
  z-index:-1;
}

.banner-bg {
  width: 100%;
  position: absolute;
  top:140rpx;
  display: flex;
  justify-content: center;
}

.banner-text {
  width: 600rpx;
  height: 200rpx;
  background-color: #1675e1;
  z-index: 0;
  opacity:0.4;
  filter:alpha(opacity=80);
}

.banner-text-top {
  top: 196rpx;
  position:absolute;
  z-index:2;
  color: white;
  width: 100%;
  text-align: center;
}

.banner-text-bottom {
  top: 270rpx;
  position:absolute;
  z-index:2;
  color: white;
  width: 100%;
  text-align: center;
}

.select-case {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.case-img {
  flex: 1;
  margin: 30rpx 30rpx 20rpx;
  height: 190rpx;
  box-shadow: -4px 4px 10px #ccc;
}

.case-img2 {
  flex: 1;
  margin: 20rpx 30rpx;
  height: 190rpx;
  box-shadow: -4px 4px 10px #ccc;
}

.consultation-button {
  margin-top: 30rpx;
  height: 88rpx;
  flex: 1;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: white;
  background: linear-gradient(to bottom, #49a3ff, #1675e1);
  border-radius: 4rpx;
  box-shadow: -4px 4px 10px #ccc;
}

.consultation-button:active {
  margin-top: 30rpx;
  height: 88rpx;
  flex: 1;
  margin-left: 30rpx;
  margin-right: 30rpx;
  color: white;
  background: linear-gradient(to bottom, #49a3ff, #49a3ff);
  border-radius: 6rpx;
  box-shadow: -4px 4px 10px #ccc;
}