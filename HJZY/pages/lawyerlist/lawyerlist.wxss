.lawyer-head {
    display: flex;
    flex-direction: row;
}

.lawyer-info-header {
    display: flex;
    flex-direction: row;
    width: 100%;
    align-items: center;
    background: white;
    border-top: 1rpx solid #eeeeee;
}

.avatar {
    margin: 40rpx 30rpx 30rpx 20rpx;
}


.little-button {
    width: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 30rpx;
    margin-right: 30rpx;
    text-align: center;
    background: #fff;
    border-radius: 6rpx;
    border: 1rpx solid #1aad13;
    color: #1aad13;
}

.normal {
    color: #353535;
}

.gray {
    color: #999999;
}

.margin-top {
    margin-top: 20rpx;
}

.lawyer-name-address {
    color: #353535;
    line-height: 50rpx;
}

.answear-info {
    color: #aaa;
    margin-top: 17rpx;
}

.lawyer-info {
    color: #888;
    margin-left: 30rpx;
    display: flex;
    flex-direction: row;
}

.margin-bottom {
    margin-bottom: 20rpx;
}

.padding-bottom {
    padding-bottom: 20rpx;
}